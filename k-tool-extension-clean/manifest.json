{
  "manifest_version": 3,
  "name": "K-Tool Document Generator",
  "description": "Extension để cấu hình và sinh tài liệu tự động từ BA content",
  "version": "2.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "K-Tool Settings",
    "default_icon": "assets/icon.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:8090/*",
    "http://localhost:5001/*",
    "https://gendoc.thangnotes.dev/*",
    "https://*.atlassian.net/*",
    "https://*.confluence.com/*",
    "https://confluence.mbbank.com.vn/*"
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8090/*",
        "https://*.atlassian.net/*",
        "https://*.confluence.com/*",
        "https://confluence.mbbank.com.vn/*"
      ],
      "js": ["lib/mermaid.min.js", "tiptap.js", "content.js"],
      "css": ["content.css", "mermaidAIChat.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "lib/*",
        "lib/mermaid.min.js",
        "src/content/richTextEditor/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
