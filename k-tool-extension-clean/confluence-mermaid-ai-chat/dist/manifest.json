{
  "manifest_version": 3,
  "name": "Confluence Mermaid AI Chat",
  "description": "Extension để chat với AI khi click vào ảnh Mermaid trong Confluence",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:8090/*",
    "https://*.atlassian.net/*",
    "https://*.confluence.com/*"
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8090/*",
        "https://*.atlassian.net/*",
        "https://*.confluence.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
